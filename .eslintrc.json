{
    "extends": [
        "airbnb"
    ],
    "parser": "babel-eslint",
    "rules": {
        "func-names": "off",
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "import/no-unresolved": "off",
        "react/jsx-indent": [
            1,
            4
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prop-types": "off",
        "react/jsx-indent-props": ["error", 4],
        "arrow-parens": "off"
    },
    "plugins": []
}